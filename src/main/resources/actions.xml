<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="bined.choose-file">
		<CODE>
			wm.addDockableWindow(BinEdPlugin.NAME);
			wm.getDockableWindow(BinEdPlugin.NAME).chooseFile();
		</CODE>
	</ACTION>

	<ACTION NAME="bined.save-file">
		<CODE>
			wm.addDockableWindow(BinEdPlugin.NAME);
			wm.getDockableWindow(BinEdPlugin.NAME).saveFile();
		</CODE>
	</ACTION>

	<ACTION NAME="bined.copy-to-buffer">
		<CODE>
			wm.addDockableWindow(BinEdPlugin.NAME);
			wm.getDockableWindow(BinEdPlugin.NAME).copyToBuffer();
		</CODE>
	</ACTION>
</ACTIONS>

